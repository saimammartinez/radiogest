<div class="row">
    <h2>Usuarios</h2>
    <div class="container">

        <a href="/users/add" class="btn btn-warning btn-block">AÃ±adir Usuario </a>
        {{!-- <button onclick="rec.start()">Buscar<i class="fas fa-microphone-alt"></i></button> --}}
    </div>
