<div class="row">
    <div class="container">

        <a href="/diplomas/add" class="btn btn-warning btn-block">AÃ±adir Diploma </a>
    </div>
</div>
<div class="row">
    {{#each diplomas}}

    <div class="col-md-2 ">
        <div class="card mt-2">
            <div class="card-title d-flex justify-content-between align-items-center pt-2 pl-2 pr-2">
                <h5> {{tipoDiploma}} </h5>
                <a href="diploma/edit/{{_id}}"><i class="fa fa-pencil"></i></a>
            </div>
            <div class="card-body ">
                <h6>
                    {{usuario}}
                    <br>
                    {{urlDiploma}}
                    <br>
                    {{!-- {{#if (descargadoDiploma==='on')}}Descargado{{else}}No descargado{{/if}} --}}
                    Descargado: {{descargadoDiploma}}

                </h6>
                <form action="diploma/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
                </form>


            </div>

        </div>

    </div>

    {{/each}}
</div>